#include <stdio.h>

int main() {
    char op = '0';    // Using 'op' instead of 'operator' to avoid confusion
    double num1 = 0.0;
    double num2 = 0.0;
    double result = 0.0;

    printf("Enter the first number: ");
    scanf("%lf", &num1);

    printf("Enter the operator (+, -, *, /): ");
    scanf(" %c", &op);  // Space before %c to handle newline

    printf("Enter the second number: ");
    scanf("%lf", &num2);

    if (num2 == 0 && op == '/') {
        printf("Error: Division by zero!\n");
        return 1;
    }

    switch (op) {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        case '*':
            result = num1 * num2;
            break;
        case '/':
            result = num1 / num2;
            break;
        default:
            printf("Invalid operator!\n");
            return 1;
    }

    printf("%.2lf %c %.2lf = %.2lf\n", num1, op, num2, result);
    return 0;
}