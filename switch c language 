#include<stdio.h>
int main (){
	int dayofweek = 5;
	  
	  printf ("enter a dayofweek (1-7)");
	  scanf("%d", dayofweek);
	  
	switch (dayofweek){
	     case 1:
	       printf("it is monday");
	       break;
	     case 2:
	      printf("it is tuesday");
	      break;
	    case 3:
	      printf("it is wednessday");
	      break;
	    case 4:
	      printf("it is thrusday");
	      break;
	    case 5:
	       printf("it is friday");
	       break;
	     case 6:
	        printf("it is saturday");
	        break;
	      case 7:
	        printf("it is sunday");
	        break;
	        
	       default:
	         printf("please enter a number (1-7)");
	}
	return 0;
}