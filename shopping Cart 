#include<stdio.h>
#include<string.h>
int main () {
	//shopping cart
	
	char item [50];
	float price = 0.0f;
	int quantity =0;
	char currency ='$'; 
	//declare total
	float total =0.0f;
	
	printf ("what item would you like to buy ?");
	fgets(item,sizeof (item),stdin);
      item[strlen(item)  -  1] = '/0';
		
	printf("what is the price of each?:");
	scanf ("%f",&price);
	
	printf("how would you like?");
	scanf("%d",& quantity);
	
	total= price *quantity ;
	printf("you have brought %d %s\n",quantity,item);
	printf(" %c %f", currency,total);
	
	return 0;
}