#include<stdio.h>
int main () {
	int choice = 0;
	float pounds = 0.0f;
	float killograms =0.0f;
	
	printf ("weight conversation calculation\n");
	printf("1.killograms to pounds\n");
	printf("2.pounds to killograms\n");
	printf ("Enter your choice (1 or 2):");
	scanf("%d",&choice);
	
	if(choice ==1){
	     //killograms to pounds
			printf("Enter the weight in killograms");        
				scanf("%f",&killograms);
		
		pounds = killograms * 2.20462;
		printf("%f killograms  is equal to %f pounds \n",killograms ,pounds);
	}
		else if (choice==2){
		//pounds to killogrms
		printf("enter the weight in pounds");
		scanf("%f",&pounds);
		
		killograms  = pounds /2.20462;
		printf("%fpounds is equal to %f killograms\n",pounds ,killograms);
		}
		else {
			printf ("invalid choice please enter 1 or 2\n");
		}
		return 0;
}